<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar"
        android:logo="@drawable/baseline_arrow_back_ios_new_24"
        android:titleMarginStart="140dp"
        android:title="Spider plant"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/sanpham1"
        android:background="#F5F5F5"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="24dp"
        android:paddingLeft="24dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="18dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Cây trồng"
                    android:fontFamily="@font/poppins"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_btn_san_pham"
                    android:textSize="10sp"
                    />
                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Ưa bóng"
                    android:fontFamily="@font/poppins"
                    app:backgroundTint="@null"
                    android:background="@drawable/custom_btn_san_pham"
                    android:layout_marginLeft="10dp"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:textColor="#007537"
                android:text="250.000 đ"
                android:fontFamily="@font/poppins"
                android:textStyle="bold"
                android:layout_marginTop="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết sản phẩm"
                android:fontFamily="@font/poppins"
                android:textSize="17sp"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line_black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kích cỡ"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nhỏ"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xuất xứ"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Châu phi"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line_grey"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tình trạng"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="còn 10 sp"
                    android:textColor="#007537"
                    android:fontFamily="@font/poppins"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:gravity="end"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_bg_line_grey"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã chọn 1 sản phẩm"
                android:fontFamily="@font/poppins"
                android:textSize="16sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tạm tính"
                android:fontFamily="@font/poppins"
                android:gravity="end"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/minus"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:fontFamily="@font/poppins"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textSize="17sp"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/plus"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="500.000đ"
                android:gravity="end"
                android:textStyle="bold"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_dangNhap"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Chọn mua"
            android:fontFamily="@font/poppins"
            android:background="@drawable/custom_btn_san_pham"
            app:backgroundTint="@null"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            />

    </LinearLayout>


    


</LinearLayout>