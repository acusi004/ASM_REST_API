<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.profileFragment"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toolbar"
        android:titleMarginStart="170dp"
        android:title="PROFILE"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_pro_avatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sanpham1"
                android:background="@drawable/item_bg_profile"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/tv_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đỗ trung hiếu"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_pro_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dotrunghieu7490@gmail.com"
                    android:fontFamily="@font/poppins"/>

            </LinearLayout>



        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chung"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="50dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg_line_grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa thông tin"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cẩm nang trồng cây"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lịch sử giao dịch"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Q &amp; A"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bảo mật và điều khoản"
            android:textSize="20sp"
            android:textColor="#C0C0C0"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="25dp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/item_bg_line_grey"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đièu khoản và điều kiện"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chính sách quyền riêng tư"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/tv_pro_Logout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Đăng xuất"
            android:textColor="#FF0000"
            android:fontFamily="@font/poppins"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
</LinearLayout>